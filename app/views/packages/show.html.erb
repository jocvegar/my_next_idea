<% provide :title, "Procesos" %>
<div class="container">
	<div id="team">
		<h3 class="text-center">
			<%= @package.title %>
		</h3>
		<div class="row text-center">
			<div class="col-12 col-md-6">
				<p><strong>Fecha de inicio</strong> <%= @package.start_date.strftime("%d de %b %Y") %></p>
			</div>
			<div class="col-12 col-md-6">
				<p><strong>Fecha de fin</strong> <%= @package.finish_date.strftime("%d de %b %Y") %></p>
			</div>
		</div>

		<div class="container">
			<% if @package.assigments.empty? %>
				<div class="col-md-12">
					<p class="text-center text-muted">
						No tiene equipos
					</p>
				</div>
			<% else %>
				<div id="assigments-loop">
					<%= render 'assigments_loop', assigments: @package.assigments %>
				</div>
			<% end %>
		</div>

		<br>
		<div class="row">
			<div class="col-6 col-sm-4 offset-sm-2">
				<%= link_to packages_path, class: "btn btn-secondary btn-block" do %>
					<span><i class="fas fa-chevron-left"></i></span> Atr√°s
				<% end %>
			</div>
			<div class="col-6 col-sm-4">
				<%= link_to edit_package_path(@package), class: "btn btn-primary btn-block" do %>
					Editar
				<% end %>
			</div>
		</div>
		<div class="row py-5">
			<div class="col-6 offset-3">
				<%= link_to package_path(@package), method: :delete,
				    data: { confirm: "Estas seguro de querer borrar este proceso?" } do %>
					<p class="text-center faded-red">Borrar?</p>
				<% end %>
			</div>
		</div>
	</div>
</div>
