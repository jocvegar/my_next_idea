<div class="container">
	<div id="team">
		<h3 class="text-center">
			<%= @team.name %>
		</h3>
		<hr>
		<div class="container-fluid">
		    <div class="row">
		        <% @team.users.each do |user| %>
                    <ul class="fa-ul">
                        <li><span class="fa-li"><i class="fas fa-check"></i></span>
							<%= user.username %>
                        </li>
                    </ul>
		        <% end %>
		        <% if @team.users.empty? %>
		        	<div class="col-md-12">
		        		<p class="text-center muted">
		        			No tiene usuarios
		        		</p>
		        	</div>
		        <% end %>
		    </div>
		</div>
		<div class="row">
			<%= link_to 'Edit', edit_team_path(@team) %> |
			<%= link_to 'Back', teams_path %>
		</div>
	</div>
</div>
