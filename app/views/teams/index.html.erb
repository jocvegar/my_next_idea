<div class="container">
    <h1>Teams</h1>
</div>

<section class="py-5">
    <div class="container">
        <div class="row">
            <% @teams.each do |team| %>
                <div class="col-lg-4">
                    <div class="card mb-5 mb-lg-5">
                        <div class="card-body">
                            <h5 class="text-muted text-uppercase text-center">
                                <%= team.name %>
                            </h5>
                            <hr>
                            <ul class="fa-ul">
                                <li><span class="fa-li"><i class="fas fa-check"></i></span>Miembro</li>
                            </ul>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>
